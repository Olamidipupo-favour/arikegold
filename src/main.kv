<Onboarding>:
	MDFloatLayout:
		radius:[80,]
		md_bg_color:rgba("#FF7EFEA")
		MDFloatLayout:
			radius:[500,500,500,160]
			size_hint:[.5,.25]
			pos_hint:{'center_x':.6,'center_y':1}
			md_bg_color:rgba('#FFD9B8')
		Image:
			source:'data/ff.png'
			size_hint:1,1
			pos_hint:{'center_x':.5,'center_y':.55}
		MDLabel:
			text:"Start your journey with ArikeGold"
			halign:'center'
			font_style:'H5'
			pos_hint:{'center_y':.3}
		MDLabel:
			text:"smart,gorgeous & fashionable"
			halign:'center'
			font_style:'Subtitle1'
			pos_hint:{'center_y':.2}
		MDFillRoundFlatButton:
			text:"start"
			md_bg_color:rgba('#FFD9B8')
			text_color:rgba('#1B1817')
			pos_hint:{'center_x':.5}
			size_hint:.2,.05
			radius:[10,5,3,2]
<Signin>:
	MDFloatLayout:
		radius:[80,]
		md_bg_color:rgba("#FF7EFEA")
		MDLabel:
			text:'Login'
			font_style:"H2"
			pos_hint:{'center_y':.8}
			halign:"left"
			spacing:"10dp"
		MDTextField:
			#mode:'round'
			hint_text:"Email"
			pos_hint:{'center_y':.6}
			halign:"center"
			validator:"email"
			color:rgba("#FFD9B8")
		MDTextField:
			#mode:'round'
			hint_text:"Password"
			password:True
			pos_hint:{'center_y':.5}
			halign:"center"
		MDRoundFlatButton:
		    text:"Login"
			pos_hint:{"center_x":.5,"center_y":.35}
		MDLabel:
		    text:"Have no account?"
			pos_hint:{"center_y":.3}
			halign:"left"
		MDTextButton:
		    text:"signup"
			pos_hint:{"center_y":.3,"center_x":.42}
			color:"blue"
		MDLabel:
		    text:"© ArikeGold 2022"
			pos_hint:{"center_y":.05}
			halign:"center"
